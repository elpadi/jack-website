	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>{{ title }}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
	</head>
	<body>
		<div id="container">
			<header>
				<nav>
					<ul>
						<li><a href="{{ urlFor('admin/home') }}">Dashboard</a></li>
						<li><a href="{{ urlFor('admin/invites') }}">Invites</a></li>
					</ul>
				</nav>
			</header>
			{% if flash|length > 0 %}
			<div class="notices">
				{% for f in flash %}
				<p>{{ f }}</p>
				{% endfor %}
			</div>
			{% endif %}
			<div id="content">
				{% block content %}
				{% endblock %}
			</div>
		</div>
	</body>
</html>
