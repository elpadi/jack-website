{% macro resp_img(path, width, alt) %}
<img class="responsive-image" data-image="{{ path | split('/') | last }}" alt="{{ alt|default('') }}" src="{{ (path ~ '-5.jpg') | asset_url }}" srcset="{% for n in [4,3,2] %}{{ (path ~ '-' ~ n ~ '.jpg') | asset_url }} {{ width // n }}w, {% endfor %} {{ (path ~ '.jpg') | asset_url }} {{ width }}w">
{% endmacro %}
