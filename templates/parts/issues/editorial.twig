{% extends "site.twig" %}
{% block subnav %}
{% include "snippets/issues_subnav.twig" %}
{% endblock %}
{% block content %}
{% for section in sections %}
<section class="issue-section">
	<main class="right">
		<h1 class="title">{{ section.title }}</h1>
		<p class="tags">{{ section.tags | join('/') }}</p>
		<p class="description">{{ section.description | nl2br }}</p>
	</main>
	<aside class="left">
	<div class="images tc">{% for img in section.images %}<img src="{{ (asset_path ~ '/' ~ img.filename ~ '.jpg') | asset_url }}" alt=""><br>{% endfor %}</div>
	</aside>
</section>
{% endfor %}
<section id="fixed-issue-section" class="issue-section">
	{% for section in sections %}
		<main class="right">
			<h1 class="title">{{ section.title }}</h1>
			<p class="tags">{{ section.tags | join('/') }}</p>
			<p class="description">{{ section.description | nl2br }}</p>
		</main>
	{% endfor %}
</section>
{% endblock %}
{% block foot_scripts %}
{% if not MINIFY_SCRIPTS %}
<script src="{{ 'js/lib/editorial.js' | url }}" async></script>
{% endif %}
{% endblock %}
