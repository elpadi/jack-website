{% extends "site.twig" %}
{% block subnav %}
{% include "snippets/issues_subnav.twig" %}
{% endblock %}
{% block content %}
{% for section in sections %}
<section class="issue-section">
	<main class="right">
		<h1 class="title">{{ section.title }}</h1>
		{% if section.subtitle %}<h3 class="subtitle">{{ section.subtitle }}</h3>{% endif %}
		{% if section.subtitle %}<p class="tags">{{ section.tags | join('/') }}</p>{% endif %}
		{% if section.description %}<p class="description">{{ section.description | nl2br }}</p>{% endif %}
	</main>
	<aside class="left">
	<div class="images tc">{% for img in section.images %}
		<h2>{{ img.title }}</h2>
		<img src="{{ (asset_path ~ '/' ~ img.filename ~ '.jpg') | asset_url }}" alt="">
	{% endfor %}</div>
	</aside>
</section>
{% endfor %}
<section id="fixed-issue-section" class="issue-section">
	{% for section in sections %}
		<main class="right">
			<h1 class="title">{{ section.title }}</h1>
			{% if section.subtitle %}<h3 class="subtitle">{{ section.subtitle }}</h3>{% endif %}
			{% if section.subtitle %}<p class="tags">{{ section.tags | join('/') }}</p>{% endif %}
			{% if section.description %}<p class="description">{{ section.description | nl2br }}</p>{% endif %}
		</main>
	{% endfor %}
</section>
{% endblock %}
{% block foot_scripts %}
{% if not MINIFY_SCRIPTS %}
<script src="{{ 'js/lib/editorial.js' | url }}" async></script>
{% endif %}
{% endblock %}
